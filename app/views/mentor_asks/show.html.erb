<div class="row">
	<h1>Mentee Info</h1>
	<div class="well span12">
		<div class="span5">
      <%= render '/asks/details.html.erb' %>
      <%= link_to "Return to Mentees List", mentors_sign_up_path,
        class: "btn btn-info" %>
      <% if @deletable %>
        <%= link_to "Delete Request",
          mentor_ask_path(@ask, token: params[:token]),
          method: :delete, class: "btn btn-danger", id: "delete_mentor_ask" %>
      <% else %>
        <%= link_to "Become Mentor!", new_answer_path(ask_id: @ask.id),
          class: "btn btn-success" %> 
      <% end %>
		</div>
		<div class="span6">
      <p>
        <strong>Project Category:</strong>
        <% if @ask.categories %>
          <% categories = [] %>
          <% @ask.categories.each { |category| categories << category.name } %>
          <%= categories.join(', ') %>
        <% else %>
          <%= "none" %>
        <% end %>
      </p>
			<p><strong>Project Description: </strong><br></p>
      <p class="offset1"><%= @ask.description %></p>
		</div>
	</div>
</div>
