<% days = %w{Monday Tuesday Wednesday Thursday Friday Saturday Sunday} %>
<% days.each do |day| %>
  <strong><%= day.pluralize%>:</strong>
  <% if meetup_times = @ask.meetup_times.where("day = ?", day) %>
    <% times = [] %>
    <% meetup_times.each { |meetup| times << meetup.period } %>
    <%= times.join(', ') %>
  <% else %>
    none
  <% end %>
    <br>
<% end %>
