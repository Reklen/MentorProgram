</div><!-- Header Row for Mentor Request Form -->
<%= form_for @ask, class: "form-inline col-lg-4" do |f| %>
<div class="row"><!-- Mentor request form - Input for name & email -->
  <%= f.text_field :name, class: "form-control", placeholder: "Name" %>
  <%= f.text_field :email, class: "form-control", placeholder: "Email" %>
</div><!-- Mentor request form - Input for name & email -->
<hr>
<div class="row"><!-- Mentor request form - Input for Preferred meeting location -->
  <p class="lead"><em>Please select your preferred meeting location(s).</em></p>
    <div class="row well">
      <% @locations.each_with_index do |location, i| %>
        <% if i.even? %>
          <div class="span3">
          <% end %>
          <label class="checkbox" for="<%= location.name %>">
            <span class="icons"><span class="first-icon fui-checkbox-unchecked"></span><span class="second-icon fui-checkbox-checked"></span></span>
            <%= f.check_box "locations", {multiple: true, "data-toggle" => "checkbox"}, location.id, nil %>
            <%= location.name %>
          </label>
          <% if i.odd? %>
            </div>
          <% end %>
      <% end %>


</div><!-- Mentor request form - Input for Preferred meeting location -->
  <hr>
<div class="row"><!-- Mentor request form - Input for Day & Time availability -->
  <p class="lead"><em>Please select days & times you are available to meet.</em></p>
  <% ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday", "Sunday"].each do |day| %>
  <div class="row well well-small">
    <div class="span2">
      <h2><%= day %></h2>
    </div>
    <% ["Anytime", "Unavailable", "Any Morning Time", "Before 9am",
      "Any Afternoon Time", "Lunchtime", "Any Evening Time", "After 5pm"].each_with_index do |time, i| %>
    <% if i.even? %><div class="span2"><% end %>
      <label class="checkbox" for="<%= day + "-" + time %>">
        <span class="icons"><span class="first-icon fui-checkbox-unchecked"></span><span class="second-icon fui-checkbox-checked"></span></span>
        <% meetup = @meetups.where("period = ?", time).where("day = ?", day).first %>
        <%= f.check_box "meetup_times", {multiple: true, "data-toggle" => "checkbox"}, meetup.id, nil %>
        <% if time.length > 11 %>
          <small><%= time %></small>
        <% else %>
          <%= time %>
        <% end %>
      </label>
    <% if i.odd? %> </div> <% end %>
    <% end %>
    </div>
  <% end %>
  <hr>
</div><!-- Mentor request form - Input for Day & Time availability -->

<div class="row"><!-- Mentor request form: Input for Project Category & Description -->
  <div class="span4">
    <h4>Select a category for the project you are working on</h4>
    <% @categories.each do |category| %>
      <label class="checkbox" for="<%= category.name%>">
        <span class="icons"><span class="first-icon fui-checkbox-unchecked"></span><span class="second-icon fui-checkbox-checked"></span></span>
        <%= f.check_box "categories", {multiple: true, "data-toggle" => "checkbox"}, category.id, nil %>
        <%= category.name %>
      </label>
    <% end %>

        <!-- The next line does not yet create a new category, need to add that code -->
        <input type="text" class="form-control" placeholder="Other">
  </div>
  <div class="span8">
    <h4>Please write a 2-3 sentence description of your project so mentors can evaluate whether they can help you.</h4>
    <%= f.text_area "description", class: "span8", rows: "8" %>
  </div><!--Mentor request form: Input for Project Category & Description -->
</div><!-- Mentor request form - Input for Project Category & Description -->

