<% model = @ask.class.name.underscore.to_sym %>
<div class="row">
  <div class="span12">
    <p class="lead">
      <em>Please select your preferred meeting location(s).</em>
    </p>
  </div>
</div>
<div class="span12">
  <div class="row well">
    <% @locations.each_with_index do |location, i| %>
      <% if i.even? %>
        <div class="span3">
      <% end %>
      <label class="checkbox" for="<%= location.name %>">
        <span class="icons">
          <span class="first-icon fui-checkbox-unchecked"></span>
          <span class="second-icon fui-checkbox-checked"></span>
        </span>
        <% if params[model] && params[model][:locations] %>
          <% checked = params[model][:locations].include?(location.id.to_s) %>
        <% end %>
        <%= form.check_box "locations", {multiple: true,
          "data-toggle" => "checkbox", checked: checked}, location.id, nil %>
        <%= location.name %>
      </label>
      <% if i.odd? %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

