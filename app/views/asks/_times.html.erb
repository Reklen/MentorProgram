<% days = %w{Monday Tuesday Wednesday Thursday Friday Saturday Sunday} %>
<% times = ["Morning", "Afternoon", "Evening"] %>
<div class="row">
  <p class="lead">
    <em>Please select days & times you are available to meet.</em>
  </p>
  <div class="row well well-small">
  <% days.each do |day| %>
    <div class="span">
    <h2><%= day %></h2>
    <% times.each_with_index do |time, i| %>
      <label class="checkbox" for="<%= day + "-" + time %>">
        <span class="icons inline">
          <span class="first-icon fui-checkbox-unchecked"></span>
          <span class="second-icon fui-checkbox-checked"></span>
        </span>
        <% meetup = @meetups.where("period = ?", time).
          where("day = ?", day).first %>
        <% if params[:ask] && params[:ask][:meetup_times] %>
          <% checked = params[:ask][:meetup_times].include?(meetup.id.to_s) %>
        <% end %>
          <%= f.check_box "meetup_times",
            {multiple: true, "data-toggle" => "checkbox", checked: checked},
            meetup.id, nil %>
          <%= time %>
      </label>
    <% end %>
    </div>
  <% end %>
  </div>
  <hr>
</div>

